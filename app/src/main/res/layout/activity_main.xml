<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9f7f6"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:text="Welcome to Business Fest"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp"
        android:textSize="25sp"
        />







   <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/studentid"
        android:background="#e1ecfa"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginTop="150dp"
        android:hint="Username"

       />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:background="#e1ecfa"
        android:layout_below="@+id/studentid"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:hint="Password"
        android:ems="10"
        android:inputType="textPassword"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/Loginbutton"
        android:layout_below="@+id/password"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:onClick="Login"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/notaccounttext"
        android:layout_below="@+id/Loginbutton"
        android:text="Not account yet ?"
        android:layout_marginLeft="22dp"
        android:layout_marginHorizontal="40dp"
        android:paddingTop="5dp"
        android:layout_marginTop="22dp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signuptext"
        android:layout_below="@+id/Loginbutton"
        android:text="Signup"
        android:layout_toRightOf="@+id/notaccounttext"
        android:layout_alignBaseline="@+id/notaccounttext"
        android:textSize="20sp"
        android:onClick="signup"
        />




</RelativeLayout>